<div class="row">

  <div class="center-align categories-side-bar col s3">
    <h3>Categories</h3>
    <div>
      <%= link_to "All Bunkers", bunkers_path, class:"btn black category-link first-link" %>
    </div>
    <% all_categories.each do |category| %>
      <div>
        <%= link_to category.title.capitalize, category_path(category.title), class:"btn category-link black" %>
      </div>
    <% end %>
  </div> <!--end of categories side bar -->

  <div class="bunkers-column col s9">
    <h1 class="center-align index-h1">Everything you could possibly need to survive....</h1>
    <h3 class="center-align">Not a single thing missing, nope.</h3>

    <div class="bunkers-container site-font">
      <% target.each do |bunker| %>
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src=<%= bunker.image %>>
          </div>
          <div class="card-content">

            <%= link_to bunker.title.capitalize, bunker, class: "bunker-title grey-text text-darken-4" %>
            <span class="right activator grey-text text-darken-4 card-price"><%= number_to_currency(bunker.price) %></span>
            <div class="add-to-duffel center-align">
              <%= link_to "Add to Duffel", duffel_items_path(bunker_id: bunker.id), method: :post, class: "black center-align waves-effect waves-light btn site-font" %>
            </div>
          </div>
          <div class="card-reveal">

            <span class="card-title grey-text text-darken-4"><%= link_to bunker.title, bunker %><i class="material-icons right">close</i></span>
            <p><%= bunker.description %></p>
          </div>
        </div> <!-- end of card -->
      <% end %>
    </div> <!-- end of Bunkers Container -->
  </div> <!-- end of Bunkers Column -->
</div> <!-- end of row -->

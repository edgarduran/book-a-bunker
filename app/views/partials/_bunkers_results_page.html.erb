  <div class="row">
    <h1 class="bunkers center-align index-h1">Available Bunkers</h1>
    <div class="bunkers-container site-font">
      <span class="center"><%= will_paginate %></span>
      <% target.each do |bunker| %>
      <center><div class="card dropshadow">
        <div class="card-image col s3">
          <%= image_tag(bunker.image) %>
        </div>
        <br>
        <div class="row">
          <div class="bunker-description col s6">
            <%= link_to bunker.title.capitalize, bunker, class: "bunker-title grey-text text-darken-4" %>
            <p>Location: <%= link_to bunker.location.city, location_path(bunker.location.slug) %></p>
            <p>Store: <%= link_to bunker.store.name, store_bunkers_path(bunker.store.slug) %></p>
            <p><%= bunker.description %></p>
          </div>
          <br><br>
          <span class="activator grey-text text-darken-4 card-price"><%= number_to_currency(bunker.price) %></span>
          <br><br>
          <div class="add-to-cart">
            <%= link_to "Book Now!!", bunker, class: "black center-align waves-effect waves-light btn site-font" %>
          </div>
        </div>
      </div></center> <!-- end of card -->
      <% end %>
    </div> <!-- end of Bunkers Container -->
  </div>
  <span class="center"><%= will_paginate %></span>

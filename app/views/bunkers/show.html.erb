<div id="bunker-show" class="container site-font">
  <div class="row">
    <div class="card-image col s8 center">
      <%= image_tag(@bunker.image) %>
    </div>
    <div class="col s4">
      <h1><%= @bunker.title %></h1>
      <p><%= @bunker.description %></p>
      <p><%= number_to_currency(@bunker.price) %></p>
    </div>
    <div class="admin-btns">
      <p><%= render partial: @partial %></p>
    </div>
  </div>
</div>
